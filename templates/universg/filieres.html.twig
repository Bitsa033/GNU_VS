{% extends 'base.html.twig' %}

{% block body %}
  <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <!-- Info boxes -->
        <div class="row">
          <div class="col-12 col-sm-6 col-md-3">
            <div class="info-box">
              <span class="info-box-icon bg-info elevation-1"><i class="fas fa-th"></i></span>

              <div class="info-box-content">
                <span class="info-box-text">Nb filieres</span>
                <span class="info-box-number">
                 {{filieresNb}}
                </span>
              </div>
              <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
          </div>
          <!-- /.col -->
          
        </div>
        <!-- /.row -->

        <div class="row">
          <div class="col-md-12">
            <div class="form-inline">
              <div class="card insert-filiere">

                <div class="card-body">
                  <form action="{{path('filieres')}}" method="post">
                      <input type="text" name="nom_f" class="form-control" placeholder="Nom de la filiere" id="">
                      <input type="text" name="abbr_filiere" class="form-control" placeholder="Abbreviation" id="">
                      <button type="submit" class="btn btn-success">Valider</button>
                  </form>
                </div>
              
              </div>
            </div>
          </div>
          <!-- /.col filiere -->
        </div>
         <!-- /.row -->
        
        <div class="row">
          <div class="col-md-10">
            <h5 class='h5'>Liste des filieres <a class="btn btn-primary" href=""> Generer un fichier pdf <i class="fa fa-file"></i> </a> </h5>
            <table class="table table-bordered">
              <tr>
                <th  style="width:3%;">ID</th>
                  <th>filieres</th>
                  <th style="width:32%;">Action</th>
              </tr>
              {% for filiere in filieres %}
              <tr>
              <td> {{filiere.id}}</td>
                  <td>
                  <strong>{{filiere.sigle}}</strong><br>
                  <i>{{filiere.nom}}</i>
                  </td>
                  <td>
                    <a class="btn btn-info" href="{{path('filieres',{id:filiere.id})}}">Infos <i class="fa fa-eye"></i></a>
                   <a class="btn btn-warning" href="{{path('suppression_filiere',{id:filiere.id})}}">Supprimer <i class="fa fa-times"></i></a>
                  </td>
              </tr>
              {% else %}
                  <tr>
                    <td colspan="2">Liste vide !</td>
                  </tr>
              {% endfor %}
            </table>
          </div>
          <!-- /.col filieres --> 
        </div>
            
    </section>
    <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
{% endblock %}
