{% extends 'base.html.twig' %}

{% block title %}UniversgController!{% endblock %}

{% block body %}
  <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <!-- Info boxes -->
        <div class="row">
          <div class="col-12 col-sm-6 col-md-3">
            <div class="info-box">
              <span class="info-box-icon bg-info elevation-1"><i class="fas fa-users"></i></span>

              <div class="info-box-content">
                <span class="info-box-text">Nb etudiants</span>
                <span class="info-box-number">
                {{etudiants|length}}
                </span>
              </div>
              <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
          </div>
          <!-- /.col -->
          <div class="col-12 col-sm-6 col-md-3">
            <div class="info-box mb-3">
              <a href="{{path('creation_etudiants')}}" class="info-box-icon bg-primary elevation-1"><i class="fas fa-plus"></i></a>

              <div class="info-box-content">
                <span class="info-box-text">Ajouter un </span>
                <span class="info-box-text">etudiant</span>
              </div>
              <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
          </div>
          <!-- /.col -->

          <!-- fix for small devices only -->
          <div class="clearfix hidden-md-up"></div>

          <div class="col-12 col-sm-6 col-md-3">
            <div class="info-box mb-3">
              <a href="{{path('liste_inscriptions_etudiants')}}" class="info-box-icon bg-primary elevation-1"><i class="fa fa-table"></i></a>

              <div class="info-box-content">
                <span class="info-box-text">Liste des</span>
                <span class="info-box-text">inscriptions</span>
              </div>
              <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
          </div>
          <!-- /.col -->

        </div>
        <!-- /.row -->

        <div class="row">
          <div class="col-md-12">
              <table class="table table-bordered">

                </p>
             
                  <tr>
                      <th>ID</th>
                      <th>Action</th>
                      <th>Nom</th>
                      <th>Prenom</th>
                      <th>Sexe</th>
                  </tr>
                  {% for etudiant in etudiants %}
                  <tr>
                      <td>{{etudiant.id}}</td>
                      <td>
                      <a href="{{path('suppression_etudiant',{id:etudiant.id})}}"  class="btn btn-warning">Supprimer <i class="fa fa-times"></i></a>
                      <a href="{{path('inscription_etudiants',{id:etudiant.id})}}"  class="btn btn-info">Inscrire <i class="fa fa-pen"></i></a>
                      <a href="{{path('inscription_etudiants',{id:etudiant.id})}}"  class="btn btn-info">Filiere <i class="fa fa-book"></i></a>
                      </td>
                      <td>{{etudiant.nom}}</td>
                      <td>{{etudiant.prenom}}</td>
                      <td>{{etudiant.sexe}}</td>
                  </tr>
                  {% else %}
                  <tr>
                    <td colspan="5">Aucun étudiant récent n' a été enregistré !</td>
                  </tr>
                  {% endfor %}
              
              </table>
          </div>
          <!-- col -->
        </div>
        <!-- row -->

    </section>
    <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
{% endblock %}
