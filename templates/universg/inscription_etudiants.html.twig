{% extends 'layout/layout.html.twig' %}

{% block title %}UniversgController!{% endblock %}

{% block body %}
  <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <!-- Info boxes -->
        <div class="row">
          
          <!-- fix for small devices only -->
          <div class="clearfix hidden-md-up"></div>

          <div class="col-12 col-sm-6 col-md-3 offset-4">
            <div class="info-box mb-3">
              <a href="{{path('creation_etudiants')}}" class="info-box-icon bg-primary elevation-1"><i class="fa fa-pen"></i></a>

              <div class="info-box-content">
                <span class="info-box-text">Ajouter un</span>
                <span class="info-box-text">etudiant</span>
              </div>
              <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
          </div>
          <!-- /.col -->
          
          <!-- fix for small devices only -->
          <div class="clearfix hidden-md-up"></div>

          <div class="col-12 col-sm-6 col-md-3">
            <div class="info-box mb-3">
              <a href="{{path('liste_inscriptions_etudiants')}}" class="info-box-icon bg-primary elevation-1"><i class="fa fa-table"></i></a>

              <div class="info-box-content">
                <span class="info-box-text">Liste des</span>
                <span class="info-box-text">inscriptions</span>
              </div>
              <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
        <div class="row">
          <div class="col-md-6 offset-4">
          <table class="table">
            <tr>
              <th>Inscription</th>
              </tr>
          </table>
          </div>
        </div>
        <!-- /row-->

        <div class="row">

          <!-- on affiche tous les etudiants à inscrire -->
          <div class="col-md-4">
            <table class="table table-bordered">

                <tr>
                  <th>Action</th>
                  <th>Nom</th>
                </tr>
                {% for et in etudiants %}
                  
                <tr>
                  <td>
                     <a class="btn btn-info" href="{{path('inscription_etudiants',{id:et.id})}}">Inscrire</a>
                  </td>
                  <td>{{et.nom}}  {{et.prenom}}</td>
                </tr>
                {% else %}
                  <tr>
                  <td colspan=2> Aucun recent etudiant enregistré !</td>
                  </tr>
                {% endfor %}

            </table>
          </div>
          <!-- col -->
          <div class="col-md-6">
            <table class="table table-bordered">

                <tr>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Sexe</th>
                </tr>
                <tr>
                    <td>{{etudiant.nom}}</td>
                    <td>{{etudiant.prenom}}</td>
                     <td>{{etudiant.sexe}}</td>
                </tr>
            </table>

            <div class="card-body">
                  
                    <form action="{{path('inscription_etudiants',{id:etudiant.id})}}" method="post">
                      <select style="margin-left:1%;" type="text" name="filiere" class="form-control" id="">
                        <option value="">Filiere</option>
                        {% for filiere in filieres %}
                        <option value="{{filiere.id}}">{{filiere.sigle}}</option>
                        {% endfor %}
                      </select>
                      <br>

                      <select style="margin-left:1%;" type="text" name="niveau" class="form-control" id="">
                        <option value="">Niveau</option>
                        {% for niveau in niveaux %}
                        <option value="{{niveau.id}}">{{niveau.nom}}</option>
                        {% endfor %}
                      </select>
                      <br>
                     <button type="submit" class="btn btn-success form-control">Valider</button>
                    <form>
                  </div>  
          </div>
          <!-- col -->
        
        </div>
        <!-- ./row -->
        
    </section>
    <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
{% endblock %}
