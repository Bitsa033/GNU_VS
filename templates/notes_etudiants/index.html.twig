{% extends 'base.html.twig' %}

{% block body %}
	<!-- Content Wrapper. Contains page content -->
	<div
		class="content-wrapper">

		<!-- Main content -->
		<section class="content">
			<div class="container-fluid">
				
				<div class="row">
					<div class="col-md-12">
						<br>
						<h5 class='h5'>
							Liste des notes
							<a class="btn btn-primary" href="">
								Generer un fichier pdf
								<i class="fa fa-file"></i>
							</a>
							<a href="{{path('notes_etudiants_filiereEtNiveau_etudiant')}}" class="btn btn-primary">Noter des etudiants
								<i class="fa fa-pen"></i>
							</a>
						</h5>
						<br>
						<p class="h5 btn btn-danger">
						Filiere : {{filiere.nom}} <br>
						Niveau: {{niveau.nom}}
						</p>
						<table class="table table-bordered">
							
							<tr>
								<th style="width:3%;">ID</th>
								<th>Etudiant</th>
								<th>Matiere</th>
								<th>Note</th>
								<th style="width:30%;">Action</th>
							</tr>
							{% for note in notes %}

								<tr>
									<td>{{note.id}}</td>
									<td>{{note.nomE}}</td>
									<td>{{note.nomM}}</td>
									<td>{{note.moyenne}} / 20</td>
									<td>
										<a class="btn btn-info" href="{{path('notes_etudiants_liste')}}">Mettre Ã  jour
											<i class="fa fa-edit"></i>
										</a>
										<a class="btn btn-warning" href="{{path('notes_etudiants_liste')}}">Supprimer
											<i class="fa fa-times"></i>
										</a>
									</td>
								</tr>
								{% else %}
                                <tr>
                                    <td  colspan="5"><p class="h6 offset-4">Liste vide ! </p></td>
                                </tr>
							{% endfor %}

						</table>
					</div>

				</div>
				<!-- /.col niveaux -->
			</div>

		</section>
		<!-- /.content -->
	</div>
	<!-- /.content-wrapper -->
{% endblock %}
