{% extends 'base.html.twig' %}

{% block body %}
  <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <!-- Info boxes -->
        <div class="row">
          <div class="col-12 col-sm-6 col-md-3">
            <div class="info-box">
              <span class="info-box-icon bg-info elevation-1"><i class="fas fa-users"></i></span>

              <div class="info-box-content">
                <span class="info-box-text">Nb inscriptions</span>
                <span class="info-box-number">
                  {{inscriptions|length}}
                </span>
              </div>
              <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
          </div>
          <!-- /.col -->
          <div class="col-12 col-sm-6 col-md-3">
            <div class="info-box">
              <span class="info-box-icon bg-info elevation-1"><i class="fas fa-book"></i></span>

              <div class="info-box-content">
                <span class="info-box-text">Nb filieres</span>
                <span class="info-box-number">
                  {{filieres|length}}
                </span>
              </div>
              <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
          </div>
          <!-- /.col -->

          <div class="col-12 col-sm-6 col-md-3">
            <div class="info-box">
              <span class="info-box-icon bg-info elevation-1"><i class="fas fa-table"></i></span>

              <div class="info-box-content">
                <span class="info-box-text">Nb niveaux</span>
                <span class="info-box-number">
                  {{niveaux|length}}
                </span>
              </div>
              <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
          </div>
          <!-- /.col -->

          <div class="col-12 col-sm-6 col-md-3">
            <div class="info-box">
              <span class="info-box-icon bg-info elevation-1"><i class="fas fa-pen"></i></span>

              <div class="info-box-content">
                <span class="info-box-text">Nb matieres</span>
                <span class="info-box-number">
                  {{matieres|length}}
                </span>
              </div>
              <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->

        <div class="row">
          <div class="col-md-12">
          <h5>Liste des Etudiants inscris</h5>
              <table class="table table-bordered">

                  <tr>
                     
                      <th>Nom</th>
                    
                      <th>Niveau</th>
                      <th>Filiere</th>
                  </tr>
                  {% for inc1 in inscriptions %}
                  <tr>
                     
                      <td>{{inc1.etudiant.nom}}  {{inc1.etudiant.prenom}}</td>
                      <td>{{inc1.niveau.nom}}</td>
                      <td>{{inc1.filiere.sigle}}</td>
                  </tr>
                  {% else %}
                  <tr>
                    <td colspan="5">Désolé, aucun etudiant n'est inscrit !</td>
                  </tr>
                  {% endfor %}

              
              </table>
          </div>
          <!-- col -->
        </div>
        <!-- row -->
        


            
    </section>
    <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
{% endblock %}
