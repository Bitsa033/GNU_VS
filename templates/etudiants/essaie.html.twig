{% extends 'base.html.twig' %}

{% block body %}
    <!-- Content Wrapper. Contains page content -->
    <div
        class="content-wrapper">

        <!-- Main content -->
        <section class="content">
            <div
                class="container-fluid">
                <!-- Info boxes --> <br>

                <div class="row">
                    <div class="col-md-8 offset-2">
                        <div class="card ">
                            <h5 class="offset-2">Selectionnez un ou plusieurs Etudiants...</h5>
                            {# <div class="card-header">
                                
                                Selectionnez un ou plusieurs Etudiants...
                                <div class="card-tools">
                                    <div class="input-group input-group-sm" style="width: 150px;">
                                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                                            <div class="input-group-append">
                                                <button type="submit" class="btn btn-default">
                                                    <i class="fas fa-search"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div> #}

                            <div class="card-body table-responsive p-0" style="height: 400px;">

                                <table class="table table-head-fixed text-nowrap">
                                    <form action="{{path('etudiants_choixFiliereNiveauxI')}}" method="post">
                                        <div class="row">
                                            <div class="col-md-5">
                                                <select name="filiere" id="" class="form-control">
                                                    <option value="">Choisir Filiere...</option>
                                                    {% for filiere in filieres %}
                                                         <option value="{{filiere.id}}">{{filiere.nom}}</option>
                                                    {% else %}
                                                        <option value="">Tableau vide...</option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                            <!--/col -->
                                            <div class="col-md-5">
                                                <select name="classe" id="" class="form-control">
                                                    <option value="">Choisir Classe...</option>
                                                    {% for classe in classes %}
                                                         <option value="{{classe.id}}">{{classe.nom}}</option>
                                                    {% else %}
                                                        <option value="">Tableau vide...</option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                            <!--/col -->
                                            <div class="col-md-2">
                                                <button class="btn btn-default" type="submit">Choisir</button>
                                            </div>
                                            <!--/col -->
                                        </div>
                                        <!--/row -->
                                    </form>
                                    <form action="" method="post">
                                        <hr>
                                            {# <tr>
                                                <th>Id</th>
                                                <th>Matiere</th>
                                            </tr> #}
                                                {% for ms in mr %}
                                            <tr>

                                                <td><input type="checkbox" name="etudiantId[]" id="" value="{{ ms.id }}"></td>

                                                <td>{{ ms.nom }}<input type="hidden" value="{{ ms.id }}" class="form-control form-check" name="etudiantName[]" id=""></td>
                                                
                                                {% endfor %}
                                                    
                                            </tr>
                                            <tr>
                                                <td colspan="3">
                                                    <button name="enregistrer" class="btn btn-success form-control" type="submit">Enregistrer</button>
                                                </td>
                                            </tr>
                                            </form>

                                            </div>
                                        
                                    </div>
                                </table>
                                <!-- /.content-wrapper -->

                            </div>
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
