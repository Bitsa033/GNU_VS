{% extends 'base.html.twig' %}

{% block title %}Liste des cours!
{% endblock %}

{% block body %}
	<!-- Content Wrapper. Contains page content -->
	<div
		class="content-wrapper">

		<!-- Main content -->
		<section class="content">
			<div
				class="container-fluid">
				<!-- Info boxes -->

				<div class=" card">
					<table class="table">
						<tr>
							<td>Filiere: {{filiere.nom}}</td>
						</tr>
						<tr>
							<td>Classe: {{classe.nom}}</td>
						</tr>
						<tr>
							<td>Semestre: {{semestre.nom}}</td>
						</tr>
					</table>
					<h5 class='card-header'>Liste des cours |<a href="">Imprimer</a> </h5>
					<div class=" card-body table-responsive p-0" style="height: 350px;">
						<table class="table table-bordered table-head-fixed">

							<tr>
								<th>Matiere</th>
							</tr>
							{% for cours in listeCours %}
								<tr>
									
									<td>{{cours.matiere.nom}}</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="4">Liste vide !</td>
								</tr>
							{% endfor %}


						</table>
					</div>
					<!-- col -->

					
				</div>
				<!-- row -->
				</div>
				
			<!-- /.content -->
		</div>
		<!-- /.content-wrapper -->
	{% endblock %}
