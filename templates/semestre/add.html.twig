{% extends 'base.html.twig' %}

{% block body %}
    <!-- Content Wrapper. Contains page content -->
    <div
        class="content-wrapper">

        <!-- Main content -->
        <section class="content">
		<br>
            <div
                class="container-fluid">
                <!-- Info boxes -->
                <div class="row">
                    <div class="col-12 col-sm-6 col-md-3"></div>
                    <!-- /.col -->

                </div>
                <!-- /.row -->
                <div class="row">
					<div class="col-6">
						<div class="card">
						 <h5 class="card-header">Liste des semestres disponibles | <a href="{{path('semestres_imprimer')}}">Imprimer</a> </h5>
							<div class="card-body table-responsive p-0" style="height: 390px;">
								<table class="table table-head-fixed text-nowrap">

									<tbody>
										<tr>
											<th style="width:3%;">ID</th>
											<th>Semestre</th>
											
										</tr>
										{% for semestre in semestres %}
											<tr>
												<td>
													{{ semestre.id }}</td>
												<td>
													Semestre {{ semestre.nom }}
												</td>
													
											</tr>
											{% else %}
											<tr>
												<td colspan="2">Liste vide !</td>
											</tr>
										{% endfor %}

									</tbody>
								</table>

							</div>
							<!-- /.card-body -->
						</div>
					</div>
                    
                    <div class="col-4">

                        <div class="card">
                            <div class="card-header">
								<form action="{{ path('semestres_nb') }}" method="post">
								<div class="form-inline">
									<input type="number" name="nb_row" class="form-control" placeholder="Nbre de lignes">
									<button type="submit" class="form-control">Ok</button>
								</div>
								</form>
                                
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body table-responsive p-0" style="height: 250px;">
                                <form action="" method="post">
                                    <table class="table table-head-fixed text-nowrap">

                                        <tbody>
                                            <tr>
                                                <th>Semestre</th>
                                            </tr>

											{% for nb_row in nb_rows %}
                                            <tr>
                                                <th>
                                                    <input type="number" name="semestre{{nb_row}}" class="form-control" placeholder="Numero du semestre Ex: 3" id="">
												</th>
                                            </tr>
												
											{% endfor %}
												
											
                                        </tbody>
										<!-- /.tbody -->
                                    </table>
                                    
                                <!-- /.form -->

								</div>
								<!-- /.card-body -->
                                <div class="card-footer">
                                    <button type="submit" name="enregistrer" class="btn btn-success form-control offset-1 col-10">Enregistrer</button>
									<br><br>
                                    </form>
                                </div>
                                </div>

                                

                            </div>


                        </div>
                        <!-- /.card -->

                    </div>
                    <!-- /.col -->


                </div>
					
                <!-- /.row -->
            </div>

        </section>
    </div>
{% endblock %}
