{% extends 'base.html.twig' %}

{% block body %}
    <!-- Content Wrapper. Contains page content -->
    <div
        class="content-wrapper">

        <!-- Main content -->
        <section class="content">
            <div
                class="container-fluid">
                <!-- Info boxes --> <br>

                <div class="row">
                    <div class="col-md-8 offset-2">
                        <div class="card ">
                             <h5 class="offset-2">Selectionnez un ou plusieurs Etudiants...</h5>
                            {# <div class="card-header">
                                
                                <div class="card-tools">
                                    <div class="input-group input-group-sm" style="width: 150px;">
                                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                                            <div class="input-group-append">
                                                <button type="submit" class="btn btn-default">
                                                    <i class="fas fa-search"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div> #}

                            <div class="card-body table-responsive p-0" style="height: 400px;">

                                <table class="table table-head-fixed text-nowrap">
                                    <form action="{{path('notes_choixFiliereNiveauxSemestreNc')}}" method="post">
                                        <div class="row">
                                            <div class="col-md-4">
                                                <select name="filiere" id="" class="form-control">
                                                    <option value="">Choisir Filiere...</option>
                                                    {% for filiere in filieres %}
                                                         <option value="{{filiere.id}}">{{filiere.nom}}</option>
                                                    {% else %}
                                                        <option value="">Tableau vide...</option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                            <!--/col -->
                                            <div class="col-md-3">
                                                <select name="classe" id="" class="form-control">
                                                    <option value="">Choisir Classe...</option>
                                                    {% for classe in classes %}
                                                         <option value="{{classe.id}}">{{classe.nom}}</option>
                                                    {% else %}
                                                        <option value="">Tableau vide...</option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                            <!--/col -->
                                            <div class="col-md-3">
                                                <select name="semestre" id="" class="form-control">
                                                    <option value="">Choisir Semestre...</option>
                                                    {% for semestre in semestres %}
                                                         <option value="{{semestre.id}}">{{semestre.nom}}</option>
                                                    {% else %}
                                                        <option value="">Tableau vide...</option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                            <!--/col -->
                                            <div class="col-md-2">
                                                <button class="btn btn-default" type="submit">Choisir</button>
                                            </div>
                                            <!--/col -->
                                        </div>
                                        <!--/row -->
                                    </form>
                                    <br>
                                    <div class="form-inline">
                                        Cours
                                        <form action="{{path('notes_sessionCours')}}" method="post">
                                            <select name="cours" id="" class="form-control">
                                                <option value="">Choisir Cours ...</option>
                                                {% for mr in cours %}
                                                    <option value="{{ mr.id }}">{{ mr.matiere.nom }}</option>
                                                {% endfor %}

                                            </select>
                                            <button class="btn btn-default" type="submit">Ok</button>
                                        
                                        </form>
                                    </div>
                                    <form action="" method="post">
                                        
                                        <hr>
                                            <tr>
                                                <th>Id</th>
                                                <th>Etudiant</th>
                                                <th>Moyenne</th>
                                            </tr>
                                                {% for ms in inscriptions %}
                                            <tr>

                                                <td>
                                                    <input type="checkbox" name="inscription[]" id="" value="{{ ms.idI }}"></td>

                                                    <td>{{ ms.nomE }}<input type="hidden" value="{{ ms.idI }}" class="form-control form-check" name="nom[]" id=""></td>
                                                        <td>
                                                            <input type="text" class="form-control" name="moyenne[]" required></td>
                                                        </tr>
                                                    {% endfor %}
                                                    
                                            </tr>
                                            <tr>
                                                <td colspan="3">
                                                    <button class="btn btn-success col-5 offset-3" name='enregistrer' type="submit">Enregistrer</button>
                                                </td>
                                            </tr>
                                            </form>

                                            </div>
                                        
                                    </div>
                                </table>
                                <!-- /.content-wrapper -->

                            </div>
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
